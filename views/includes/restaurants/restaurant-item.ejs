<li class="restaurant-item">
	<article>
		<h2><%= restaurant.name %></h2>
		<div id="info">
			<p><%= restaurant.cuisine %></p>
			<p><%= restaurant.address %></p>
		</div>
		<p id="opinion"><%= restaurant.opinion %></p>
		<div id="action">
			<button class="btn">
				<a href="/restaurants/<%= restaurant.id %>">View Restaurant</a>
			</button>
		</div>
	</article>
</li>
